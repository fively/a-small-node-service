{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/core-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/core-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/core-service",
  "projects": {
    "core-service": {
      "type": "application",
      "root": "core-service",
      "entryFile": "main",
      "sourceRoot": "apps/core-service/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto",
          "**/*.yaml",
          "**/*.json"
        ],
        "tsConfigPath": "apps/core-service/tsconfig.json"
      }
    },
    "wechat-service": {
      "type": "application",
      "root": "wechat-service",
      "entryFile": "main",
      "sourceRoot": "apps/wechat-service/src",
      "compilerOptions": {
        "assets": [
          "**/*.proto",
          "**/*.yaml",
          "**/*.json"
        ],
        "tsConfigPath": "apps/wechat-service/tsconfig.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    }
  }
}